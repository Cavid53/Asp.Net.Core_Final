@model SingleCategorie
@{
    ViewData["Title"] = "Update";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <form method="post" enctype="multipart/form-data">
                   
                        <div class="form-group">
                            <label>Image:</label>
                            <div><img src="~/img/@Model.Image" width="200px" /></div>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhotoUpdate">Update Image:</label>
                            <input asp-for="PhotoUpdate" accept="image\*" class="form-control" />
                        </div>
                   

                    <input type="submit" class="btn btn-primary" value="Update" />
                </form>
            </div>
        </div>
    </div>

