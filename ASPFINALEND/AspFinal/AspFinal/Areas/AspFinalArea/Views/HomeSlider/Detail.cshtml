@model Slider
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h3>@Html.Raw(Model.Title)</h3>
            <p>@Html.Raw(Model.Description)</p>
            <img src="~/img/@Model.Image" width="280px" />
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <a asp-action="Index"><i class="fas fa-arrow-left"></i> Go back</a>
        </div>
    </div>
</div>


