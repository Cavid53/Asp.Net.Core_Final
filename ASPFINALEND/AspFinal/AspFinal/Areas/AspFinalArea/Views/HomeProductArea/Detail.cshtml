@model Product
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h3>@Model.Name</h3>
            <img src="~/img//@Model.Image" width="280px" /><br>
            <label class="mt-3">Price:</label>
            <p>@Model.RegularPrice</p>
            <label>Discount:</label>
            <p>@Model.Discount</p>
            <label>Now price:</label>
            <p style="color:red;">@("$" + " " + (Model.RegularPrice - (Model.RegularPrice * Model.Discount / 100)))</p>

        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <a asp-action="Index"><i class="fas fa-arrow-left"></i> Go back</a>
        </div>
    </div>
</div>
