
@model IEnumerable<Product>


@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <a asp-action="Create" class="btn btn-primary">Create</a>
                <div class="card-body">
                    <h5 class="card-title m-b-0">Slider</h5>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Discount</th>
                            <th scope="col">Now Price</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                        }
                        @foreach (var product in Model)
                        {
                        <tr>
                            <th scope="row">@count</th>
                            <td>
                                <img src="~/img/@product.Image" alt="Alternate Text" width="180px" />
                            </td>
                            <td>@(product.Name)</td>
                            <td>@("$" + " " + product.RegularPrice)</td>
                            <td>@(product.Discount + " " + "%")</td>
                            <td style="color:red;">@("$"+" " +(product.RegularPrice-(product.RegularPrice*product.Discount/100)))</td>
                            <td>
                                <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-success">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



