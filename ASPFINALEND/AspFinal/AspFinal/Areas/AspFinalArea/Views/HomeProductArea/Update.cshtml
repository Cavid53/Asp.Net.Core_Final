@model Product
@{
    ViewData["Title"] = "Create";
}

<style>
    .input-validation-error {
        border-color: red;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegularPrice">Price:</label>
                    <input asp-for="RegularPrice" class="form-control" />
                    <span asp-validation-for="RegularPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Count">Count:</label>
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategorieID">Category Id:</label>
                    <input asp-for="CategorieID" class="form-control" />
                    <span asp-validation-for="CategorieID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Detail">Detail:</label>
                    <input asp-for="Detail" class="form-control" />
                    <span asp-validation-for="Detail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount">Discount:</label>
                    <input asp-for="Discount" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="DateDiscount">Date Discount:</label>
                    <input asp-for="DateDiscount" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="NEW_ARRIVALS">NEW_ARRIVALS:</label>
                    <input asp-for="NEW_ARRIVALS" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="BEST_SELLER">BEST_SELLER:</label>
                    <input asp-for="BEST_SELLER" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="MOST_VIEW">MOST_VIEW:</label>
                    <input asp-for="MOST_VIEW" class="form-control" />

                </div>
                <div class="form-group">
                    <label>Image:</label><br>
                    <div><img src="~/img/@Model.Image" width="200px" /></div>

                </div>
                <div class="form-group">
                    <label asp-for="PhotoUpdate">Image:</label>
                    <input asp-for="PhotoUpdate" accept="image\*" class="form-control" />
                    <span asp-validation-for="PhotoUpdate" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary" value="Update" />
            </form>
        </div>
    </div>
</div>









