@model Categorie
@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h3>@Model.Name</h3>
            <p class="text-danger mt-2">Are you sure delete this?</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form method="post">
                <input type="submit" class="btn btn-danger" value="Delete" />
            </form>

        </div>
    </div>
    <div class="row mt-3">
        <div class="col-lg-12">
            <a asp-action="Index"><i class="fas fa-arrow-left"></i> Go back</a>
        </div>
    </div>
</div>



