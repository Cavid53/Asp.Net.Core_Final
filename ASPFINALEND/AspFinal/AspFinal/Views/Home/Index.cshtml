<div class="product-area pt-20 pb-35">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!--Section Title 2 Start-->
                <div class="section-title2">
                    <h2>Our Products</h2>
                    <!--Product Tab Menu Start-->
                    <div class="product-tab-menu">
                        <ul class="nav" id="myTab" role="tablist">
                            @foreach (var cate in Model.Categories)
                            {
                                <li class="nav-item">
                                    <a class="nav-link @cate.ActiveField" data-toggle="pill" aria-selected="true" href="#tab-@cate.Id">@cate.Name</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <!--Product Tab Menu End-->
                </div>
                <!--Section Title 2 End-->
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="tab-content" id="myTabContent">
                    @foreach (var item in Model.Categories)
                    {

                        <div class="tab-pane fade show @item.ActiveField" role="tabpanel" id="tab-@item.Id">
                            <div class="row">
                                <div class="product-slider owl-carousel">
                                    @{ var length = (item.Products.Count() % 2 == 0 ? item.Products.Count() / 2 : item.Products.Count() / 2 + 1);}
                                    @for (int i = 0, j = 0; i < length; i++, j += 2)
                                    {
                                        <div class="col-md-12">
                                            @foreach (var item1 in item.Products.Skip(j).Take(2))
                                            {

                                                <!--Single Product Area Start-->
                                                <div class="single-product-area mb-40">
                                                    <div class="product-img img-full">
                                                        <a href="single-product.html">
                                                            <img class="first-img" src="img/@item1.Image" alt="">
                                                        </a>
                                                        <span class="sticker">New</span>
                                                        <div class="product-action">
                                                            <ul>
                                                                <li><a href="cart.html" title="Add To Cart"><span class="icon_bag_alt"></span></a></li>
                                                                <li><a href="wishlist.html" title="Add to Wish List"><span class=" icon_heart_alt "></span></a></li>
                                                                <li><a href="compare.html" title="Compare this Product"><span class="icon_datareport"></span></a></li>
                                                            </ul>
                                                        </div>
                                                        <ul class="product-quickview">
                                                            <li><a href="#open-modal" data-toggle="modal" title="Quick View"><span class="icon_search"></span></a></li>
                                                        </ul>
                                                    </div>
                                                    <div class="product-content">
                                                        <h4><a href="single-product.html">@item1.Name</a></h4>
                                                        <div class="product-price" style="color:red">
                                                            @if (item1.Discount == 0)
                                                            {

                                                                @("$" + item1.RegularPrice);

                                                            }
                                                            else
                                                            {
                                                                @("$" + (item1.RegularPrice - (item1.RegularPrice * item1.Discount / 100)))
                                                                <span class="regular-price" style="color:black">@("$" + item1.RegularPrice) </span>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--Single Product Area End-->

                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!--Deal Product Area Start-->
<div class="deal-product-area deal-bg" style="background-image: url(img/bg/@Model.BackgroundImages.ElementAt(1).Image);">
    <div class="deal-produt-slider owl-carousel">
        <!--Single Deal Product Start-->
        @foreach (var product in Model.Products.Where(c=>c.NEW_ARRIVALS))
        {
            <div class="single-deal-product">
                <div class="deal-product-img img-full">
                    <a href="single-product.html"><img src="~/img/@product.Image" alt=""></a>
                    <span class="descount-sticker">@(product.Discount + "%")</span>
                </div>
                <div class="deal-product-content">
                    <div class="section-title">
                        <span class="sub-title">Our Collections</span>
                    </div>
                    <h3><a href="single-product.html">@product.Name </a></h3>
                    <p class="product-description">@product.Detail </p>
                    <div class="product-price deal-price">
                        <span class="now-price">
                            @if (product.Discount == 0)
                            {
                                @("$" + product.RegularPrice);

                            }
                            else
                            {
                                @("$" + (product.RegularPrice - (product.RegularPrice * product.Discount / 100)))
                                <span class="regular-price" style="color:black">@("$" + product.RegularPrice) </span>
                            }
                        </span>
                    </div>
                    <div class="product-countdown">
                        <div class="pro-countdown" data-countdown="@product.DateDiscount"></div>
                    </div>
                </div>
            </div>
        }

        <!--Single Deal Product End-->


    </div>
</div>
<!--Deal Product Area End-->
